{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicle</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ vehicle.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ vehicle.type }}</td>
            </tr>
            <tr>
                <th>Plate</th>
                <td>{{ vehicle.plate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehicle_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vehicle_edit', { 'id': vehicle.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
